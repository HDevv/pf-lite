{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}